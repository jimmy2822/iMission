<%= form_for user, url: admin_users_path do |f| %>
  <table>
    <tbody>
      <tr><td> <%= t("user.email") %>：<%= f.text_field :email %></td></tr>
      <tr><td><%= t("user.password") %>：<%= f.password_field :password %></td></tr>
      <tr><td><%= t("user.role") %>：<%= f.select :role, User.roles.keys.to_a %></td></tr>
      <tr><td><%= f.submit %></td></tr>
    </tbody>
  </table>
<% end %>

